<div class="cart-details">
    <div class="cart-summary">
       <h2 class="cart-title">Order Summary</h2>
        <ul class="cart-summary-list">
            <% @cart.cart_items.each do |item| %>

                <li class="cart-summary-list-item">
                    <span class="cart-summary-item-name"><%= link_to item.diagrampart.description, "/diagramparts/show/#{item.diagrampart.sysid}"  %></span>
                    <span class="cart-summary-item-points">$<%= item.diagrampart.price %> * <%= item.quantity %> = $<%= item.price %>  </span>
                </li>

        <% end %>
            <li class="cart-summary-total">
                <span class="cart-summary-total-name"> Order Total: </span>
                <span class="cart-summary-total-points">$<%= @cart.total %></span>
            </li>
        </ul>
    </div>

</div>

